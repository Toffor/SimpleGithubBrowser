<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite70</item>
        <item name="font">@font/abel</item>
    </style>

    <style name="Appearance.Title">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Appearance.Body">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size_body1</item>
    </style>

</resources>
